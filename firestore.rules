
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow read/write access to products collection
    match /products/{productId} {
      allow read, write: if true;
    }
    
    // Allow read/write access to settings collection
    match /settings/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to users collection
    match /users/{userId} {
      allow read, write: if true;
    }
    
    // Allow read/write access to categories collection
    match /categories/{categoryId} {
      allow read, write: if true;
    }
    
    // Allow read/write access to chats collection
    match /chats/{chatId} {
      allow read, write: if true;
      
      // Allow read/write access to messages subcollection
      match /messages/{messageId} {
        allow read, write: if true;
      }
    }
    
    // Allow read/write access to orders collection (for future use)
    match /orders/{orderId} {
      allow read, write: if true;
    }
    
    // Allow read/write access to sales collection (for future use)
    match /sales/{saleId} {
      allow read, write: if true;
    }
    
    // Allow read/write access to promotions collection (for future use)
    match /promotions/{promotionId} {
      allow read, write: if true;
    }
    
    // Allow read/write access to analytics collection (for future use)
    match /analytics/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to notifications collection (for future use)
    match /notifications/{notificationId} {
      allow read, write: if true;
    }
    
    // Allow read/write access to alerts collection (for future use)
    match /alerts/{alertId} {
      allow read, write: if true;
    }
    
    // Allow read/write access to backups collection (for future use)
    match /backups/{backupId} {
      allow read, write: if true;
    }
    
    // Allow read/write access to admin logs collection (for future use)
    match /adminLogs/{logId} {
      allow read, write: if true;
    }
    
    // Allow read/write access to counters collection (for future use)
    match /counters/{counterId} {
      allow read, write: if true;
    }
    
    // Allow read/write access to daily sales collection (for future use)
    match /dailySales/{date} {
      allow read, write: if true;
    }
  }
} 
